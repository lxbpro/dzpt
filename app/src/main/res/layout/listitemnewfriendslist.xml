<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10" >
		<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/listitemnewfriendslist_fra_headportrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40.0dip"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/me_head_bg_circul" />

            <com.gamecenter.gamecenter.util.circleheadportraitutil.CircularImage
                android:id="@+id/listitemnewfriendslist_cover_user_photo"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="4.0dip" />
        </FrameLayout>
		  </LinearLayout>
		  
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6" >

            <TextView
                android:id="@+id/listitemnewfriendslist_tv_friendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知" />

            <TextView
                android:id="@+id/listitemnewfriendslist_tv_friendmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requestaddnewfriend" />

            <TextView
                android:id="@+id/listitemnewfriendslist_tv_rootresource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rootresource"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center" >

            <TextView
                android:id="@+id/listitemnewfriendslist_tv_isargree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/agree" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
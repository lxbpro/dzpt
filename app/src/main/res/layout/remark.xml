<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:gravity="center_vertical"
        android:weightSum="5"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/singledetailmore_lly_return"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/singledetailmore_imageview_returnarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/button_back_gohome"/>
            <ImageView 
                android:id="@+id/singledetailmore_imageview_returnqqicon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/h002"/>
            <TextView 
                android:id="@+id/singledetailmore_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="@string/more"/>
        </LinearLayout>
        <Button 
            android:id="@+id/remark_btn_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/complete"/>
    </LinearLayout>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <EditText
            android:id="@+id/remark_et_updateremark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_input" />

        <ImageButton
            android:id="@+id/remark_imagebtn_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/abc_ic_clear_normal" />

    </FrameLayout>

	<EditText 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>

</LinearLayout>

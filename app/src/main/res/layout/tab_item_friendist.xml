<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="10">

		<EditText
			android:id="@+id/tab_item_friendlist_et_search"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="14dp"
			android:layout_weight="7.35"
			android:hint="@string/search"
			android:maxLength="16"
			android:maxLines="1" />

		<ImageButton
			android:id="@+id/tab_item_friendlist_btn_search"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1.38"
			android:background="@null"
			android:src="@drawable/search" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4">
		<ImageButton
			android:id="@+id/tab_item_friendlist_btn_addfriend"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@drawable/addqqfriend_button_bg"
			android:background="@null"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/tab_item_friendlist_btn_newfriend"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@drawable/qq_leba_list_seek_myfeeds"
			android:background="@null"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/tab_item_friendlist_btn_specialfriend"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@drawable/qq_leba_list_seek_individuation"
			android:background="@null"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/tab_item_friendlist_btn_scantwocode"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:src="@drawable/qq_leba_list_seek_saosao"
			android:background="@null"
			android:layout_weight="1"/>
	</LinearLayout>
	<!--
	<ListView
		android:id="@+id/tab_item_friendlist_listview"
		android:layout_width="match_parent"
		android:layout_height="0dp">
	</ListView>
	-->
	<ExpandableListView
		android:id="@+id/tab_item_friendlist_expandlistview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</ExpandableListView>
</LinearLayout>

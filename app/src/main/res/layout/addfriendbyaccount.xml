<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/login_bg"
        android:weightSum="9"
        >
        <ImageButton 
            android:id="@+id/addfriendbyaccount_imagebtn_return"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:src="@drawable/page_btn_return"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@null"/>
        <TextView 
            android:id="@+id/addfriendbyaccount_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightgold"
            android:textSize="20sp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/findpeoplebyaccount"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/addfriendbyaccount_et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="7.35"
            android:hint="@string/search"
            android:maxLength="16"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/addfriendbyaccount_imagebtn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.20"
            android:background="@null"
            android:src="@drawable/search" />
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dip"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/friendrequestresult"
	        android:textColor="@color/lightgold"/>
	</LinearLayout>
	<com.wdy.qq.DownPullUpdateListView 
	    android:id="@+id/addfriendbyaccount_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip">
	</com.wdy.qq.DownPullUpdateListView>
</LinearLayout>

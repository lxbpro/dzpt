<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/chatsetting_lly_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/chatsetting_imageview_returnarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/button_back_gohome"/>
            <ImageView 
                android:id="@+id/chatsetting_imageview_returnqqicon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/h002"/>
            <TextView 
                android:id="@+id/chatsetting_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="@string/chatsettingtitle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/chatsetting_llysingledetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/main_headportrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40.0dip"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/me_head_bg_circul" />

            <com.gamecenter.gamecenter.util.circleheadportraitutil.CircularImage
                android:id="@+id/chatsetting_cover_user_photo"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerInParent="true" />
        </FrameLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/chatsetting_tv_friendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noknow"/>
            <TextView 
                android:id="@+id/chatsetting_tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signature"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
	<LinearLayout 
	    android:id="@+id/chatsetting_lly_creatediscussiongroup"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="15dp"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <ImageView 
	            android:layout_width="35dp"
	            android:layout_height="25dp"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/spinner_create_discussion_group"/>
	        <TextView 
	            android:id="@+id/chatsetting_tv_creatediscussiongroup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="@string/creatediscussiongroup"/>
	    </LinearLayout>
	</LinearLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
	<LinearLayout 
	    android:id="@+id/chatsetting_lly_chatrecord"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/chatrecord"/>
	</LinearLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
	<LinearLayout 
	    android:id="@+id/chatsetting_lly_chatground"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/chatbackground"/>
	</LinearLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
	<LinearLayout 
	    android:id="@+id/chatsetting_lly_shieldfriend"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:weightSum="2"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:text="@string/shieldfriend"/>
	    <LinearLayout 
	        android:id="@+id/swichLinearLayout"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="right|center_vertical"
	        android:orientation="horizontal">
	    <TextView
                    android:id="@+id/swichTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="@string/swich_open"
                     />

                <CheckBox
                    android:id="@+id/toggle_preference_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/switch_toggle_selector"
                    android:checked="true"
                    android:gravity="center" />
                </LinearLayout>
	</LinearLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/chatsetting_btn_deletefriend"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/red"
	        android:textColor="@color/white"
	        android:text="@string/deletefriend"/>
	</LinearLayout>
</LinearLayout>
